    id: String!
    description: String!
    label: String!
    type: String!
    volume: String!
    mount: String!
    metrics: FileSystemMetrics!
}

type FileSystemMetrics {
    name: String!
    id: String!
    freeSpaceBytes: Long!
    usableSpaceBytes: Long!
    totalSpaceBytes: Long!
}

type Partition {
    identification: String!
    name: String!
    type: String!
    uuid: String!
    sizeBytes: Long!
    major: Int!
    minor: Int!
    mountPoint: String!
}

type DiskMetrics {
    id: String!
    name: String!
    temperature: Float
    reads: Int!
    readBytes: Long!
    writes: Int!
    writeBytes: Long!
    currentReadWriteRate: DiskReadWriteRate!
    smartData: SmartData
    health: DeviceHealth
