# SMART

enum HealthStatus {
    HEALTHY
    WARNING
    FAILING
    CRITICAL
}

type DeviceHealth {
    status: HealthStatus!
    messages: [String!]!
}

"""Common SMART data. Concrete subtype depends on the detected device type."""
interface SmartData {
    name: String!
    temperatureCelsius: Int
    powerOnHours: Long
    powerCycleCount: Long

    """Raw SMART attributes as reported by smartctl. Modeled as a list because GraphQL has no Map type."""
    rawAttributes: [SmartAttributeEntry!]!
}

"""A map entry for a SMART attribute keyed by its numeric attribute id."""
type SmartAttributeEntry {
    id: Int!
    attribute: SmartAttribute!
}

type SmartAttribute {
    id: Int!
    name: String!
    raw: Long
    normalized: Int
    worst: Int
}

type HddSmartData implements SmartData {
    name: String!
    temperatureCelsius: Int
    powerOnHours: Long
    powerCycleCount: Long
    rawAttributes: [SmartAttributeEntry!]!

    reallocatedSectors: Long
    pendingSectors: Long
    uncorrectableSectors: Long
    offlineUncorrectable: Long
    spinRetryCount: Long
    seekErrorRate: Long
    udmaCrcErrors: Long
}

type SataSsdSmartData implements SmartData {
    name: String!
    temperatureCelsius: Int
    powerOnHours: Long
    powerCycleCount: Long
    rawAttributes: [SmartAttributeEntry!]!

    percentageUsed: Int
    wearLevelingCount: Int
    availableReservedSpace: Int

    totalWriteGiB: Long
    totalReadGiB: Long

    mediaErrors: Long
    uncorrectableErrors: Long
    udmaCrcErrors: Long
}

type NvmeSmartData implements SmartData {
    name: String!
    temperatureCelsius: Int
    powerOnHours: Long
    powerCycleCount: Long
    rawAttributes: [SmartAttributeEntry!]!
    percentageUsed: Int
    dataUnitsRead: Long
    dataUnitsWritten: Long
    mediaErrors: Long
    numErrLogEntries: Long
    unsafeShutdowns: Long
    controllerBusyTimeMinutes: Long
}

type DiskReadWriteRate {
    readBytesPerSecond: Long!
    writeBytesPerSecond: Long!
}

## Network interface

type Connectivity {
